{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"extends": ["./base.json"],
	"linter": {
		"rules": {
			"recommended": true,
			"style": {
				"useBlockStatements": "off",
				"useImportType": "off"
			},
			"suspicious": {
				"noCommentText": "warn"
			}
		},
		"includes": ["**", "!dist/**", "!build/**", "!coverage/**"]
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"formatter": { "enabled": true, "indentStyle": "space", "indentWidth": 4 }
}
