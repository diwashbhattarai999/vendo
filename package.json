{
	"name": "vendo",
	"version": "0.0.1",
	"private": true,
	"description": "Vendo Monorepo is a collection of packages and projects for Vendo platform.",
	"author": {
		"name": "Diwash Bhandari",
		"email": "diwashb999@gmail.com",
		"url": "https://diwashb.com.np"
	},
	"license": "MIT",
	"scripts": {
		"dev": "turbo run dev",
		"build": "turbo run build",
		"test": "turbo run test",
		"test:e2e": "turbo run test:e2e",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"typecheck": "pnpm -r exec tsc --noEmit",
		"release": "semantic-release",
		"release:dry": "semantic-release --dry-run",
		"clean": "rm -rf ./apps/*/dist ./apps/*/coverage ./apps/*/.next ./apps/*/.turbo ./apps/*/build ./packages/*/dist ./packages/*/coverage ./packages/*/.turbo ./packages/*/build"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@commitlint/cli": "^20.2.0",
		"@commitlint/config-conventional": "^20.2.0",
		"@commitlint/types": "^20.2.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^12.0.2",
		"@semantic-release/release-notes-generator": "^14.1.0",
		"@types/jest": "^30.0.0",
		"@types/supertest": "^6.0.3",
		"@vendo/typescript-config": "workspace:*",
		"jest": "^29.7.0",
		"lefthook": "^2.0.12",
		"semantic-release": "^25.0.2",
		"supertest": "^7.1.4",
		"ts-jest": "^29.4.6",
		"turbo": "^2.7.2",
		"typescript": "^5.9.3"
	},
	"packageManager": "pnpm@10.26.2",
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=10.0.0"
	},
	"keywords": [
		"vendo",
		"monorepo",
		"packages",
		"projects"
	]
}
