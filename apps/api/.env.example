# ==============================================
# API APPLICATION ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env.local and fill in your values

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost

# Api Configuration
API_PREFIX=api

# Cors Configuration
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# Cookie Configuration
COOKIE_SECRET=replace_with_a_long_random_secret_at_least_10_chars
COOKIE_DOMAIN=localhost

# Database Configuration
DATABASE_URL=postgresql://vendo_user:vendo_password@localhost:5432/vendo_db

# API Rate Limit Configuration
API_RATE_LIMIT_TTL=60
API_RATE_LIMIT_MAX=100
API_RATE_LIMIT_SKIP_IF=false