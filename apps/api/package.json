        "@types/express": "^4.17.17",
        "@types/node": "^22.10.7",
        "@types/pg": "^8.16.0",
        "@types/supertest": "^6.0.0",
        "@vendo/biome-config": "workspace:*",
        "@vendo/jest-config": "workspace:*",
        "@vendo/typescript-config": "workspace:*",
        "jest": "^29.7.0",
        "prisma": "^7.2.0",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "5.5.4"
    }
