{
	"$schema": "https://turborepo.com/schema.json",

	"globalDependencies": ["package.json", "pnpm-lock.yaml", "turbo.json"],

	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"format": {
			"dependsOn": ["^format"]
		},
		"typecheck": {
			"dependsOn": ["^build"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"dependsOn": ["^test"]
		},
		"clean": {
			"cache": false
		}
	}
}
