{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"root": true,
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**",
			"!.vscode",
			"!**/dist",
			"!**/build",
			"!.turbo",
			"!**/node_modules",
			"!**/coverage",
			"!**/lcov-report"
		]
	},
	"formatter": {
		"lineWidth": 120,
		"indentStyle": "tab",
		"indentWidth": 4
	}
}
